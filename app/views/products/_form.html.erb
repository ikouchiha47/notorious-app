<% default_button_class =   %>

<%= simple_form_for form, url: url, method: method, html: html_opts do |f| %>
  <%= f.input :item_id,
    as: :hidden,
    input_html: {
      data: {'cart-add-target': 'buyNowItemID' },
      value: product_details[:item_id] }
    %>
  <%= f.input :size,
    as: :hidden,
    input_html: {
      data: {'cart-add-target': 'buyNowSize'} }
    %>
  <%= f.input :quantity,
    as: :hidden,
    input_html: {
      data: {'cart-add-target': 'buyNowQuantity'},
      value: 1 }
    %>
  <%= f.button :submit,
    "#{submit_button_text}",
    button_opts
  %>
<% end %>
