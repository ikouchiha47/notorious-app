<section class="accounts-form">
  <header>
    <h4>Signup</h4>
  </header>
  <%= simple_form_for form,
    url: accounts_signup_url, 
    method: :post, 
    html: {
      class: 'flex flex-col signup-form', id: 'new_signup_form'
  } do |f| %>
    <%= f.input :email,
      as: :email,
      required: true, 
      wrapper_html: {
        class: 'flex flex-col',
        style: '--gap: 0.6em'
      },
      input_html: {
        class: 'flat-input',
        data: { 'login-target': 'emailAddr' }
      } 
    %>
  <%= f.input :password,
      as: :password,
      required: true,
      wrapper_html: {
        class: 'flex flex-col',
        style: '--gap: 0.6em'
      },
      input_html: {
        class: 'flat-input',
        data: { 'login-target': 'password'}
      }
    %>
  <div class="accounts-btn-wrapper flex flex-row space-between">
    <%= f.button :submit,
      "Signup",
      id: "signup-btn",
      class: "btn accounts-cta-btn",
      data: { action: 'click->accounts#validateAndsignUp'} %>
  </div>
  <% end %>
</section>
