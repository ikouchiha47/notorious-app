<div class="category_wrapper">
    <div id="categories">
        <%= link_to "Shop", products_path, { class: "category_item" } %>
        <a href="#" class="category_item">About</a>
        <a href="#" class="category_item">Contact</a>
    </div>

    <div id="featured-gallery">
        <% @featured.each do |product| %>
            <div class="featured_image">
                <%= image_tag product.promoted_image %>
            </div>
        <% end %>
    </div>
</div>

